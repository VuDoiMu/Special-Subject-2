                .profile-details
                    // <img src="images/profile.jpg" alt="">
                    span.admin_name Prem Shahi
                    i.bx.bx-chevron-down
            .home-content
                .overview-boxes
                    .box
                        .right-side
                            .box-topic Total Order
                            .number=orderData.length
                            //
                                <div class="indicator">
                                <i class='bx bx-up-arrow-alt'></i>
                                <span class="text">Up from yesterday</span>
                                </div>
                        i.bx.bx-cart-alt.cart
                    
                    .box
                        .right-side
                            .box-topic Total Profit
                            .number $0

                        i.bx.bx-cart.cart.two
                    .box
                        .right-side
                            .box-topic Total Return
                            .number 0

                        i.bx.bxs-cart-download.cart.three
                            main




                .d-flex.justify-content-center
                    form.w-50
                        input#proname.form-control(type='text', autocomplete='off', placeholder='Name')
                        input#proname.form-control(type='text', autocomplete='off', placeholder='Author')
                        input#proname.form-control(type='text', autocomplete='off', placeholder='Image link')
                        input#proname.form-control(type='text', autocomplete='off', placeholder='Category')
                        input#proname.form-control(type='text', autocomplete='off', placeholder='Price')
                        input#proname.form-control(type='text', autocomplete='off', placeholder='Publisher')

                        button#btn-create.btn.btn-success Add new Book
                            .container.text-center

                // Table
                .table-data
                    table.table
                        thead
                            tr
                                th(scope='col') Book name
                                th(scope='col') Author
                                th(scope='col') Price
                                th(scope='col') Sold
                                th(scope='col') Action



                        tbody#tbody
                            each book in data 
                                tr
                                th( scope="row") #{book.name}
                                th( scope="row") #{book.author}
                                th( scope="row") #{book.price}
                                th( scope="row") #{book.countSale}
                                th( scope="row")

                                    button#btn-update.btn.btn-warning 
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
