    body
        .sidebar
            .logo-details
                i.E
                a(href="/")
                    span.logo_name EManga
            ul.nav-links
                li
                    a.active(href='/admin/dashboard')
                        i.bx.bx-grid-alt
                        span.links_name Dashboard
                li
                    a(href='/admin/management')
                        i.bx.bx-box
                        span.links_name Book managment
                li
                    a(href='/admin/sale')
                        i.bx.bx-list-ul
                        span.links_name Sale list
                li
                    a(href='/admin/add-book')
                        i.bx.bx-list-ul
                        span.links_name Add new book                     
                //- li.log_out
                //-     a(href='/admin/login')
